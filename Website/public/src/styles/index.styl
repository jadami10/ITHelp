@import './font-awesome.css';

*
  box-sizing border-box

body
  margin 0
  background-color #EAF0F0
  font-size 14px
  font-family Lato, sans-serif
  min-width 1000px
  color #4a4a4a

textarea, input
  outline none

.fa
  margin-right 10px

a
  text-decoration none
  outline 0
  color #777
  transition all 0.3s ease
  &:hover
    color #4a4a4a
  &:focus
    outline 0

.left-navi
  position fixed
  width 18%
  min-height 100%
  background -webkit-linear-gradient(#3f5655, #4a4a4a)
  background -o-linear-gradient(#3f5655, #4a4a4a)
  background -moz-linear-gradient(#3f5655, #4a4a4a)
  background linear-gradient(#3f5655, #4a4a4a)
  font-size 14px
  letter-spacing 1px
  padding-bottom 100px
  .navi-logo
    width 100%
    height 70px
    padding-left 20px
    text-align left
    display -webkit-box
    -webkit-box-align center
    border-bottom 1px solid rgba(0,0,0,.1)
    img
      padding-left 0px
      width 100px
      height auto
  .navi
    width 100%
    height 70px
    padding-left 20px
    transition all 0.3s ease
    display -webkit-box
    -webkit-box-align center
    color #A8BABA
    border-left 3px solid rgba(0,0,0,0)
    &:hover
      color #f3f3f3
      border-left 3px solid #0396A8
  .navi-current
    background #30C0CC
    color #f3f3f3
    border-left 3px solid #30C0CC
  .log-out
    position fixed
    background-color #555
    width 18%
    bottom 0
    &:hover
      cursor pointer
      border-left 3px solid #999

.top-greeting-bar
  opacity .95
  position fixed
  top 0
  right 0
  height 70px
  width 82%
  border-bottom 1px solid #E2E2E2
  background-color #fff
  padding 0 2%
  z-index 100

.top-left-greetings
  float left
  line-height 70px
  color #777
  font-size 16px
  font-style italic
  letter-spacing 1px
  .top-left-greetings-animated
    animation-duration .8s
    animation-name slidein

@keyframes slidein
  from
    transform translateX(-15px)
    opacity 0
  to
    transform translateX(0px)
    opacity 1

.top-right-avatar
  float right
  margin-top 15px
  width 40px
  height 40px
  border-radius 50%
  background #ccc
  color #fff
  text-align center
  font-size 22px
  cursor pointer
  transition all 0.3s ease
  &:hover
    transform rotate(15deg)
    box-shadow 0 3px 10px rgba(0,0,0,.15)

.top-right-avatar-initial
  position relative
  line-height 40px

.setting-form
  display none
  opacity .9
  position absolute
  top 65px
  right 2%
  background #fff
  width 200px
  height 70px
  z-index 100
  text-align center
  font-size 16px
  color #777
  line-height 70px
  box-shadow 0 3px 15px rgba(0,0,0,.15)
  cursor pointer
  &:hover
    opacity 1

.num-badge
  font-size 12px
  background #E77B7B
  color #fff
  margin-left 30px
  letter-spacing 0
  padding 2px 10px
  border-radius 12px
  &.animated
    -webkit-animation anim-jump .5s
    -moz-animation anim-jump .5s
    -ms-animation anim-jump .5s
    -o-animation anim-jump .5s
    animation anim-jump .5s

@keyframes anim-jump
    0%,100% 
    -ms-transform rotate(0)
    -webkit-transform rotate(0)
    transform rotate(0)
    50%
      -webkit-filter brightness(1.5)
      filter brightness(1.5)
      -ms-transform rotate(20deg)
      -webkit-transform rotate(20deg)
      transform rotate(20deg)

#login
  .wrapper
    background -webkit-linear-gradient(#6DD2DB, #5DBACA)
    background -o-linear-gradient(#6DD2DB, #5DBACA)
    background -moz-linear-gradient(#6DD2DB, #5DBACA)
    background linear-gradient(#6DD2DB, #5DBACA)
    font-size 18px
    color #777
    display block
    position absolute
    width 100%
    height 100%
    transition all 0.6s ease

  .wrapper-signup
    background -webkit-linear-gradient(#6DDBC0, #5DC3CA)
    background -o-linear-gradient(#6DDBC0, #5DC3CA)
    background -moz-linear-gradient(#6DDBC0, #5DC3CA)
    background linear-gradient(#6DDBC0, #5DC3CA)

  .login
    text-align center
    position absolute
    top 45%
    left 50%
    width 340px
    transform translate(-50%, -50%)
    img
      width 100%

  .login-form
    margin-top 50px

  .input-set
    display block
    margin 10px auto
    width 100%
    span
      display inline-block
      line-height 40px
      margin-right 0
      height 40px
      width 40px
      background-color #fff
      color #42AAB3
    input
      padding-bottom 3px
      &:focus
        color #333

  .login-input
    display block

  .signup-input
    display none

  input
    border none
    height 40px
    width 300px
    font-size 18px
    color #333

  .button
    font-size 14px
    letter-spacing 1px
    width 100%
    margin-top 10px
    color #fff
    border-bottom 3px solid rgba(0,0,0,.1)
    transition all 0.2s ease
    &:focus
      border-bottom 0px solid rgba(0,0,0,.1)
      color #fff

  .login-button
    background-color #6CD1DA
    &:hover
      background-color #7FE1E9
      cursor pointer

  .reminder
    font-size 12px
    margin-top 20px
    text-align left
    color rgba(255,255,255,.7)

  .reminder-2
    cursor pointer
    display none
    transition color 0.3s ease
    &:hover
      color rgba(255,255,255,1)

  .signup-button
    background-color #FFC565
    &:hover
      background-color #FFD583
      cursor pointer

