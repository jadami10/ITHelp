#chat
  position fixed
  left 18%
  top 70px
  bottom 0
  right 0
  font-weight 300
  color #666
  input
    color #333
    &:focus
      color #333
  .chat-content
    background-color #EAF0F0
    position fixed
    bottom 120px
    left 18%
    right 0
    top 70px
    transition all 0.2s ease
    background-repeat no-repeat
    background-position 100%
    border-bottom 2px solid rgba(255,255,255,.8)
    padding 10px 2%
    overflow scroll
    .msg-block
      overflow auto
      margin-bottom 15px
      .msg
        color #fff
        padding 12px 16px
        border-radius 3px
        letter-spacing .5px
        font-size 15px
        max-width 80%
        overflow-wrap break-word
      .received
        background-color #60c8d1
        float left
      .sent
        background-color #999
        float right
